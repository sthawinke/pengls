year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{pengls}: Fit penalised generalised least squares models",
         author = c(person(family = "Hawinkel", "Stijn"),
                    person(family = "De Meyer", "Sam"),
                    person(family = "Maere", "Steven"),
                    person("R Core Team")),
         year = year,
         note = note)
